{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "",
        "Effect": "Allow",
        "Action": [
          "states:SendTaskSuccess"
        ],
        "Resource": "arn:aws:states:${aws_region}:${aws_account}:activity:${activity_name}"
      },
      {
        "Sid": "",
        "Effect": "Allow",
        "Action": [
          "states:StartExecution"
        ],
        "Resource": "arn:aws:states:${aws_region}:${aws_account}:stateMachine:${state_machine_name}"
      },
      {
        "Sid": "",
        "Effect": "Allow",
        "Action": [
          "lambda:InvokeFunction"
        ],
        "Resource": "arn:aws:lambda:${aws_region}:${aws_account}:function:${slack_lambda_name}"
      },
      {
        "Sid": "",
        "Effect": "Allow",
        "Action": [
          "s3:PutObject",
          "s3:GetObject",
          "s3:ListBucket",
          "s3:GetBucketLocation"
        ],
        "Resource": ${s3_buckets}
      }
    ]
  }