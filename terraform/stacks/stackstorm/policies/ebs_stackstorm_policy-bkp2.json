{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ec2:AttachVolume",
        "ec2:DetachVolume"
      ],
      "Resource": "arn:aws:ec2:ap-southeast-2::instance/*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:AttachVolume",
        "ec2:DetachVolume"
      ],
      "Resource": "arn:aws:ec2:ap-southeast-2::volume/*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeTags",
        "ec2:CreateTags",
        "ec2:DescribeInstances",
        "ec2:DescribeVolumeAttribute",
        "ec2:DescribeVolumeStatus",
        "ec2:DescribeVolumes",
        "ec2:DescribeVolumesModifications",
        "ec2:ModifyVolume",
        "ec2:ModifyVolumeAttribute",

        "ec2:CreateSnapshot",
        "ec2:DeleteSnapshot",
        "ec2:DescribeAvailabilityZones",
        "ec2:DescribeSnapshots",
        "ec2:CopySnapshot",
        "ec2:DescribeSnapshotAttribute",
        "ec2:ModifySnapshotAttribute"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:CreateVolume"
      ],
      "Resource": "arn:aws:ec2:ap-southeast-2::volume/*",
      "Condition": {
        "StringLike": {
          "aws:RequestTag/volume_name": "umccr-stackstorm-dockervol-*"
        },
        "ForAllValues:StringEquals": {
          "aws:TagKeys": ["volume_name"]
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:DeleteVolume"
      ],
      "Resource": "arn:aws:ec2:ap-southeast-2::volume/*",
      "Condition": {
        "StringLike": {
          "ec2:ResourceTag/volume_name": "umccr-stackstorm-dockervol-*"
        },
        "ForAllValues:StringEquals": {
          "aws:TagKeys": ["volume_name"]
        }
      }
    }
  ]
}
